<ul>
    <%= render "shared/search" %>
    <h3>Playlist cards</h3>
    <% @playlists.each do |playlist| %>
  <div class="container mt-2">
    <div class="card-playlist col 6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1549056077-661d956a551d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80)">
      <li><% playlist.title %></li>
      <li><% playlist.image_url %></li>
      <li><% playlist.description %></li>
    </div>
  </div>
    <% end %>
</ul>