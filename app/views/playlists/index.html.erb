<div class="around">
  <div class="search-bar">
    <%= render "shared/search" %>
  </div>
  <% if @playlists.empty? == true %>
  <div class="error-message center">
  <%= "No playlists found" %>
  </div>
  <% end %>

  <div class="wrapper1 align-items-center">
  <% @playlists.each do |playlist| %>
    <div class="card-playlist mt-2" style="background-image: url(<%= playlist.image_url%>)"><% link_to '', games_path %>
      <%= playlist.title.truncate_words(4) %>
      <% link_to '', games_id_path %>
    </div>
  <% end %>
  
  </div>
</div>