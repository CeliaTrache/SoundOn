<div class="around">
  <div class="search-bar">
    <%= render "shared/search" %>
  </div>
  <% if @playlists.empty? == true %>
  <div class="error-message center">
  <%= "No playlists found" %>
  </div>
  <% end %>

  <div class="wrapper1 align-items-center">
  <% @playlists.each do |playlist| %>

    <%= link_to game_path(@game) do %>
      <div class="card-playlist mt-2" style="background-image: url(<%= playlist.image_url%>)">
        <%= playlist.title.truncate_words(4) %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
