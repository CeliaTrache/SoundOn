<div class="background-home d-flex flex-column align-items-center pt-5">


  <h3 class="mb-5">Game Duration</h3>
  <%= render "shared/duration_slider" %>

  <div style="display:none;">
    <%= simple_form_for @game do |f| %>
      <%= f.input :duration, as: :integer, required: true, label: false %>
      <%= f.button :submit %>
    <% end %>
  </div>

  <div class= "mt-5" data-controller="set-duration">
    <%= link_to "Next", games_path, data: { action: 'click->set-duration#send', turbo: false}, class: "btn-player" %>
  </div>


</div>
