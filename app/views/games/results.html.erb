<div class="d-flex flex-column align-items-center">
  <h1 id="blind-test-over" data-controller="confetti">Blind Test is over !</h1>



  <div class="wrapper">
    <div class="card-score" id="winner" >
      <p class="winner-is"><i class="fas fa-crown"></i>Winner is</p>
      <div class= "rank-nickname">
        <p class="rank">1</p>
        <p class="nickname"><%= "#{@players.first['nickname'].capitalize}" %></p>
      </div>
      <p class="score"><%= "#{@players.first['score'] || "0"}" %></p>
    </div>

    <% @players.each_with_index do |player, index| %>
      <% if index > 0 %>
        <div class="card-score" >
          <div class= "rank-nickname">
            <p class="rank"><%= index + 1 %></p>
            <p class="nickname"><%= "#{player['nickname'].capitalize}" %></p>
          </div>
          <p class="score"><%= "#{player['score'] || "0"}" %></p>
        </div>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= link_to "Play again ğŸš€", "/", class: "violet-button" %>
  </div>

</div>
