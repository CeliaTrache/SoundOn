



<div class="d-flex flex-column align-items-center">
  <% if @track %>
    <h1 class="mb-4"><%= @questions.sample %></h1>

    <div id="app" class="mb-4" style="display: none;"></div>
    <div class="demo" id="countdown_starter" style="display: none;">
      <div class="demo__colored-blocks">
        <div class="demo__colored-blocks-rotater">
          <div class="demo__colored-block"></div>
          <div class="demo__colored-block"></div>
          <div class="demo__colored-block"></div>
        </div>
        <div class="demo__colored-blocks-inner"></div>
        <div class="demo__text">Sound On</div>
      </div>
      <div class="demo__inner">
        <svg class="demo__numbers" viewBox="0 0 100 100">
          <defs>
            <path class="demo__num-path-1" d="M40,28 55,22 55,78"/>
            <path class="demo__num-join-1-2" d="M55,78 55,83 a17,17 0 1,0 34,0 a20,10 0 0,0 -20,-10"/>
            <path class="demo__num-path-2" d="M69,73 l-35,0 l30,-30 a16,16 0 0,0 -22.6,-22.6 l-7,7"/>
            <path class="demo__num-join-2-3" d="M28,69 Q25,44 34.4,27.4"/>
            <path class="demo__num-path-3" d="M30,20 60,20 40,50 a18,15 0 1,1 -12,19"/>
          </defs>
          <path class="demo__numbers-path" 
                d="M-10,20 60,20 40,50 a18,15 0 1,1 -12,19 
                  Q25,44 34.4,27.4
                  l7,-7 a16,16 0 0,1 22.6,22.6 l-30,30 l35,0 L69,73 
                  a20,10 0 0,1 20,10 a17,17 0 0,1 -34,0 L55,83 
                  l0,-61 L40,28" />
      </svg>  
      </div>
    </div>

    <button type="button" id="start" class="btn-player mb-4"> Start </button>
    <button type="button" id="time" class="btn-player mb-4"> Add 15s </button>
    <%= link_to "Points Allocation", solution_game_path(@game, track_id: @track.id), class: 'btn-player ml-0', data: { turbo: "false" } %>

    <div id="player" data-token="<%= @user.token %>" data-track-id="<%= @track.spotify_url %>"></div>
  <% else %>
    <div class= "margin mt-5">
      <h1 class="mb-4">Your Blind Test is over ...</h1>
      <%= link_to "Go to results", results_game_path(@game), class: "btn-player" %>
    </div>
  <% end %>
</div>
