<div class="title-start" style= "display: block">
  <% if !@track_already_played %>
    <p id="p1" style= "color:white">Your setup is complete !</p>
  <div id="detail_setup">
    <p id="p1" style= "color:white"><i class="fas fa-history" style= "color:#C19CFC"></i>  <%= pluralize@game.duration, "minute"%></p>
    <p id="p1" style= "color:white"><i class="fas fa-music"style= "color:#C19CFC"></i>  <%=@game.playlist_title%></p>
    <p id="p1" style= "color:white"><i class="fas fa-user-friends"style= "color:#C19CFC"></i>  <%= @game.players.count%> players</p>
  </div>
    <p id="p2" style= "color:#df58f8">Ready to start ?</p>
    <% if @track %>
      <div class="button-start" id="start-button">
          <img src="<%=image_path "button_purple.png"%>" style="padding-bottom: 32px" id="start">
      </div>
      <div class="hidden" class style= "display: none">
        <%= link_to "Next", solution_game_path(@game, track_id: @track.id), class: 'violet-button', id:'violet-button' , data: { turbo: "false" } %>
      </div>
    <% end %>
  <% elsif @track_already_played && @track %>
    <p id="p2"><span style= "color:white">Next song -</span> <span style= "color:#df58f8"> Ready </span> <span style= "color:white">?</span></p>
    <div class="button-start2" id="start-button2">
        <img src="<%=image_path "button_purple.png"%>" style="padding-bottom: 32px" id="start">
    </div>
    <div class="hidden" style= "display: none">
      <%= link_to "Next", solution_game_path(@game, track_id: @track.id), class: 'violet-button', id:'violet-button' , data: { turbo: "false" } %>
    </div>
  <% else %>
  <% end %>
</div>
    <div class="demo" id="demo" style="display: none">
      <div class="demo__colored-blocks">
        <div class="demo__colored-blocks-rotater">
          <div class="demo__colored-block"></div>
          <div class="demo__colored-block"></div>
          <div class="demo__colored-block"></div>
        </div>
        <div class="demo__colored-blocks-inner"></div>
        <div class="demo__text">Sound On</div>
      </div>
      <div class="demo__inner">
        <svg class="demo__numbers" viewBox="0 0 100 100">
