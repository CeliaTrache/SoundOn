<div id="all_word" style= "display: none">
    <div class="d-flex flex-column align-items-center" id="all">
      <% if @track %>
        <h1 class="title" id="title">Find the <strong style="color:#E359F9"><%= @questions.sample %></strong>!</h1>

        <div id="app" class="mb-4"></div>
        <div id="player" data-token="<%= @user.token %>" data-track-id="<%= @track.spotify_url %>"></div>
        <audio src="" autoplay></audio>
      <% else %>
        <div class="title">
          <h2>Your blindtest is over! ⌛️</h2>
        </div>
        <%= link_to "Go to results", results_game_path(@game), class: "violet-button" %>
      <% end %>
    </div>
</div>
